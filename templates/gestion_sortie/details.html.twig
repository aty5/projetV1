{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>{{ sortie.nom }}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Nom:</label>
        </div>
        <div class="col-md-9">
            <div>{{ sortie.nom }}</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Date et heure de début:</label>
        </div>
        <div class="col-md-9">
            <div>{{ sortie.dateHeureDebut|date('d/m/y H:i') }}</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Date limite d'inscription:</label>
        </div>
        <div class="col-md-9">
            <div>{{ sortie.dateLimiteInscription | date('d/m/y H:i')}}</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Nombre maximum d'inscriptions:</label>
        </div>
        <div class="col-md-9">
            <div>{{ sortie.nbInscriptionsMax }}</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Durée:</label>
        </div>
        <div class="col-md-9">
            <div>{{ sortie.duree }}</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Informations sur la sortie:</label>
        </div>
        <div class="col-md-9">
            <div>{{ sortie.infosSortie }}</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Site organisateur:</label>
        </div>
        <div class="col-md-9">
            <div>{{ sortie.siteOrganisateur.nom }}</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Lieu:</label>
        </div>
        <div class="col-md-9">
            <div>{{ sortie.lieu.nom }}</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Rue:</label>
        </div>
        <div class="col-md-9">
            <div>{{ sortie.lieu.rue }}</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Code postal:</label>
        </div>
        <div class="col-md-9">
            <div>{{ sortie.lieu.ville.codePostal }}</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Latitude:</label>
        </div>
        <div class="col-md-9">
            <div>{{ sortie.lieu.latitude }}</div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Longitude:</label>
            </div>
            <div class="col-md-9">
                <div>{{ sortie.lieu.longitude }}</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Participants:</label>
            </div>
            <div class="col-md-9">
                <div>
                    {% for participant in sortie.participants %}
                        <p><a href="{{ path('details_participant', {'id':participant.id}) }}">{{ participant.nom }} {{ participant.prenom }}</a></p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
    {% endblock %}

    {% block title %}
        {{ sortie.nom }} | {{ parent() }}
    {% endblock %}
